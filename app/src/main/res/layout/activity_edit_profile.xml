<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"

    android:layout_height="match_parent"
    android:background="@drawable/kkkk"
    tools:context=".editProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <ImageView
        android:id="@+id/close"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginStart="370sp"
        android:backgroundTint="#ff0000"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pro_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/profile_pic"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Change Photo"
            android:textColor="#10B6CC"
            android:textSize="27sp"
             />

        <TextView
            android:id="@+id/cngPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Click Me!!!!!"
            android:textColor="#10B6CC"
            android:textStyle="bold"
            android:textSize="27sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="337dp"
            android:layout_height="51dp"
            android:layout_marginStart="25sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/custom_input"
            android:hint="Your Name"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.302" />


        <EditText
            android:id="@+id/username"
            android:layout_width="337dp"
            android:layout_height="51dp"
            android:layout_marginStart="25sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/custom_input"
            android:hint="Your User Name"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.302" />

        <EditText
            android:id="@+id/cntNo"
            android:layout_width="337dp"
            android:layout_height="51dp"
            android:layout_marginStart="25sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/custom_input"
            android:hint="Your Contact Number"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.302" />

        <EditText
            android:id="@+id/address1"
            android:layout_width="337dp"
            android:layout_height="51dp"
            android:layout_marginStart="25sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/custom_input"
            android:hint="Your Address"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.302" />

        <EditText
            android:id="@+id/email"
            android:layout_width="337dp"
            android:layout_height="51dp"
            android:layout_marginStart="25sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/custom_input"
            android:hint="Your E-mail"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.302" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/save" />


    </LinearLayout>
    </LinearLayout>

</ScrollView>